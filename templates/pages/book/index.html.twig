<div class="row">
<div class="container">
    <div class="wrapper">
    {% for book in books %}
        <main class="main-card ">
            <div class = "card-card ">
                <img class="img-card" src="https://images.noosfere.org/couv/l/ldp24366-2023.jpg" alt="">
                <div class="card-content-card">
                <h2 class="h2-card">
                    {{ book.title }}
                </h2>
                <p class="p-card">
                    {{ book.description }}
                </p>
                <a href="#" class="button-card">
                    La suite ... 
                    <span class="material-symbols-outlined-card">
                    arrow_right_alt
                    </span>
                </a>
                </div>
            </div>
        </main>
    {% endfor %}  
     </div>
 </div>
</div>



    <div class="navigation d-flex justify-content-center mt-4">
        <ul class="navigation d-flex justify-content-center mt-4">{{ knp_pagination_render(books) }}</ul>    
    </div>
   

    <table class="table">
        <thead>
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Id</th>
                {% endif %}
                <th>Title</th>
                <th>Author</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>{{ book.id }}</td>
                {% endif %}
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.price }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}"
                    class="btn btn-primary mt-4 ml-4 lift">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_book_edit', {'id': book.id}) }}"
                        class="btn btn-warning mt-4 ml-4">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_book_new') }}"
        class="btn btn-primary mt-4 mr-4 ml-4 mb-4" >Create new</a>
    {% endif %}

{% endblock %}
