{% extends 'base.html.twig' %}

{% block title %}Modification de {{ book.title }}
{% endblock %}

{% block body %}

	<div class"container">
		<h1 class="titre-site mt-4 ml-4">Modification de {{ book.title }}</h1>

		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}
		{% for messages in app.flashes ('success') %}
			<div class="alert alert-dismissible alert-success ml-4 mt-4">
				{{ message}}
			</div>
		{% endfor %}
		<div class="ml-4 mr-4">
			{{ include('/pages/book/_form.html.twig', {'button_label': 'Modifier'}) }}
		</div>
		<a href="{{ path('app_book_index') }}" class="buttonbutton mt-4 ml-4">Retour Ã  la liste</a>
		<div class="ml-4">
			{{ include('pages/book/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}

