{% extends 'base.html.twig' %}

{% block title %}UserInfo index{% endblock %}

{% block body %}
    <h1 class="ml-4 mt-4">Liste des utilisateurs</h1>

    {% for messages in app.flashes ('success') %}
        <div class="alert alert-dismissible alert-success ml-4 mt-4">
            {{ message}}
        </div>
    {% endfor %}
    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning mt-4">
            {{ message }}
        </div>
    {% endfor %}    

    {% if not user_infos is same as ([]) %}
    <div class="count ml-4 mt-4">
        <h5> Il y a {{ user_infos.getTotalItemCount }} Utilisateurs enregistr√©s </h5>
    </div>
    {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Direction</th>
                <th>PostalCode</th>
                <th>Town</th>
                <th>Country</th>
                <th>Tel</th>
                <th>Nom</th>
                <th>Pseudonyme</th>
                <th>mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>

        {% for user_info in user_infos  %}
        {% for user in users %}
            <tr>
                <td>{{ user_info.id }}</td>
                <td>{{ user_info.direction }}</td>
                <td>{{ user_info.postalCode }}</td>
                <td>{{ user_info.town }}</td>
                <td>{{ user_info.country }}</td>
                <td>{{ user_info.tel }}</td> 
                            <td>{{ user.name }}</td>
                            <td>{{ user.pseudonym }}</td>
                            <td>{{ user.email }}</td>                
                <td>
                    <a href="{{ path('app_user_info_show', {'id': user_info.id}) }}">show</a>
                    <a href="{{ path('app_user_info_edit', {'id': user_info.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation d-flex justify-content-center mt-4">
        <ul class="navigation d-flex justify-content-center mt-4">{{ knp_pagination_render(user_infos) }}</ul>    
    </div>

    <a href="{{ path('app_user_new') }}"
    class="btn btn-primary mt-4 mr-4 ml-4 mb-4">Create new</a>

{% endblock %}
